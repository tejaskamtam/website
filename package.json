    "minify": "npx tailwindcss -i ./src/styles/input.css -o ./src/dist/output.min.css --minify"
  },
  "devDependencies": {
    "daisyui": "^4.4.24",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "htmx.org": "^1.9.10"
  }
}
